{
  "name": "octopus",
  "displayName": "Octopus",
  "description": "Octopus input file language support with syntax highlighting, hover documentation, and documentation links",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/he0119/vscode-octopus.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "octopus"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "octopus",
        "aliases": [
          "Octopus",
          "octopus"
        ],
        "extensions": [
          ".inp"
        ],
        "filenames": [
          "inp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "octopus",
        "scopeName": "source.octopus",
        "path": "./syntaxes/octopus.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "octopus.showVariables",
        "title": "Show All Octopus Variables",
        "category": "Octopus"
      },
      {
        "command": "octopus.switchVersion",
        "title": "Switch Octopus Version",
        "category": "Octopus"
      },
      {
        "command": "octopus.autoDetectVersion",
        "title": "Auto Detect Octopus Version",
        "category": "Octopus"
      },
      {
        "command": "octopus.detectSystemVersion",
        "title": "Detect System Installed Octopus Version",
        "category": "Octopus"
      },
      {
        "command": "octopus.toggleInlayHints",
        "title": "Toggle Inlay Hints Display",
        "category": "Octopus"
      }
    ],
    "configuration": {
      "title": "Octopus",
      "properties": {
        "octopus.version": {
          "type": "string",
          "default": "14.1",
          "enum": [
            "14.1",
            "16.2"
          ],
          "enumDescriptions": [
            "Octopus 14.1 Version",
            "Octopus 16.2 Version"
          ],
          "description": "Select Octopus version to use"
        },
        "octopus.autoDetectVersion": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, the extension will try to automatically detect the Octopus version for the current file or workspace"
        },
        "octopus.inlayHints.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable inlay hints to distinguish builtin and user-defined variables"
        },
        "octopus.inlayHints.showBuiltin": {
          "type": "boolean",
          "default": true,
          "description": "Show inlay hints for builtin variables"
        },
        "octopus.inlayHints.showUser": {
          "type": "boolean",
          "default": true,
          "description": "Show inlay hints for user-defined variables"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == octopus",
          "command": "octopus.showVariables",
          "group": "1_octopus"
        }
      ],
      "commandPalette": [
        {
          "command": "octopus.showVariables",
          "when": "resourceLangId == octopus"
        },
        {
          "command": "octopus.switchVersion"
        },
        {
          "command": "octopus.autoDetectVersion"
        },
        {
          "command": "octopus.detectSystemVersion"
        },
        {
          "command": "octopus.toggleInlayHints"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
